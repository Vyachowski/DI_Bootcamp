board = [
    ['1', '2', '3'],
    ['4', '5', '6'],
    ['7', '8', '9'],
  ]
# Board:

def display_board():
  board_name = 'TIC TAC TOE'
  border = '* ' * 9
  line = lambda num : f'*   {board[num][0]} | {board[num][1]} | {board[num][2]}   *'
  separator = '*  ---|---|---  *'

  print(board_name)
  print(border)
  print(line(0))
  print(separator)
  print(line(1))
  print(separator)
  print(line(2))
  print(border)

display_board()